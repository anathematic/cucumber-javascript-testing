<h1>New cake</h1>

<% form_for(@cake) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :stock_on_hand, "Stock on Hand" %><br />
    <%= f.text_field :stock_on_hand %>
  </p>
  <p>
    <%= f.submit 'Create Cake' %>
  </p>
<% end %>

<%= link_to 'Back', cakes_path %>